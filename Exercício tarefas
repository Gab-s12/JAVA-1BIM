 // 1. Adicione as tarefas 'Comprar p√£o' e 'Ler um livro' ao final da lista
let tarefas = ['Estudar', 'Lavar a lou√ßa', 'Fazer exerc√≠cios'];
tarefas.push('Comprar p√£o', 'Ler livro');

// 2. Remova a √∫ltima tarefa da lista e armazene em uma vari√°vel chamada ultimaTarefa
let ultimaTarefa = tarefas.pop();

 // 3. Adicione 'Acordar cedo' e 'Tomar caf√©' no in√≠cio da lista
tarefas.unshfit('Acordar cedo', 'Tomar caf√©');

 // 4. Remova a primeira tarefa da lista e salve em uma vari√°vel chamada primeiraTarefa
let primeiraTarefa = tarefas.shift();

 // 5. Substitua as duas primeiras tarefas por 'Fazer caf√© da manh√£' e 'Organizar a mesa'
tarefas.splice(0,2,'Fazer caf√© da manh√£','Organizar a mesa');

 // 6. Crie um novo array com as tarefas da posi√ß√£o 1 at√© 3 (inclusive 3)
let tarefasSelecionadas = tarefas.slice (1, 4);

 // 7. Crie uma nova lista que combine as tarefas atuais com ['Ver um filme', 'Descansar']
let tarefasCompletas = tarefas.concat(['Ver um filme', 'Descansar'])

console.log("Lista original de tarefas:", tarefas);
 console.log("√öltima tarefa removida:", ultimaTarefa);
 console.log("Primeira tarefa removida:", primeiraTarefa);
 console.log("Tarefas selecionadas:", tarefasSelecionadas);
 console.log("Lista final de tarefas:", tarefasCompletas);



//PERCORRENDO- 
let numeros = [3, 7, 10, 2, 5];

for (let numero of numeros) { // VAI PEGAR CADA VALOR DO ARRAY E COLOCAR DENTRO DE UMA VARI√ÅVEL N√öMERO 
  if (numero % 2 === 0) { //VERIFICA SE √â PAR 
    console.log(numero + " √© par."); 
  } else {
    console.log(numero + " √© √≠mpar.");
  }
}

//ITERANDO ARRAYS-
// Criando o array de frutas
const frutas = ["ma√ß√£", "banana", "uva", "pera", "abacaxi"];

console.log("üîÅ 1. Loop For Tradicional");
for (let i = 0; i < frutas.length; i++) {
  // i come√ßa em 0 e vai at√© o √∫ltimo √≠ndice do array
  // frutas[i] acessa o elemento atual
  console.log(frutas[i]); // Resultado: "ma√ß√£", "banana", "uva", "pera", "abacaxi"
}

console.log("\nüí¨ 2. M√©todo forEach()");
frutas.forEach(fruta => {
  // 'fruta' representa cada item do array
  // A fun√ß√£o √© executada para cada fruta
  console.log(fruta); // Resultado: "ma√ß√£", "banana", "uva", "pera", "abacaxi"
});

console.log("\nüß© 3. M√©todo map()");
const frutasMaiusculas = frutas.map(fruta => {
  // Transforma a fruta em letras mai√∫sculas
  return fruta.toUpperCase();
});
console.log(frutasMaiusculas); 
// Resultado: ["MA√á√É", "BANANA", "UVA", "PERA", "ABACAXI"]

console.log("\nüîç 4. M√©todo filter()");
const frutasComA = frutas.filter(fruta => {
  // Verifica se a fruta cont√©m a letra 'a'
  return fruta.includes('a');
});
console.log(frutasComA); 
// Resultado: ["ma√ß√£", "banana", "abacaxi"]

