// ExercÃ­cio 2 - CÃ¡lculo da mÃ©dia
function media(num1, num2, num3) {
  return (num1 + num2 + num3) / 3;
}

let resultadoFinal = media(6, 10, 9);

if (resultadoFinal >= 7) {
  console.log("Aprovado");
} else {  // else if (resultadoFinal < 7) 
  console.log("Reprovado");
}

