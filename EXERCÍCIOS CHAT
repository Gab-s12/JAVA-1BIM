//3.1 Escreva um programa que receba a média de um aluno e diga:
let media = 8
if (media>=7){
  console.log("Aprovado")
}
else if (media<=6.9 && media>=5){
  console.log("Recuperação")
}
else {
  console.log("Reprovado")
}

