//4.1 Crie uma lista com 5 frutas e:
let frutas=['Banana','Maçã', 'Pera', 'Morango', 'Uva']
frutas.push('Maracuja');
frutas.shift();
console.log(frutas.length);
console.log(frutas[frutas.length -1])

//4.2 Com base na lista abaixo:
let alunos = ["Ana", "João", "Pedro", "Lívia"];
let turma1 = alunos.slice(0,2);
let turma2 = alunos.slice(2);
alunos.splice (2,2, 'Gabi');
let turmas = turma1.concat(turma2);
console.log("Turma 1:", turma1);      
console.log("Turma 2:", turma2);      
console.log("Alunos atualizados:", alunos); 
console.log("Turmas unidas:", turmas);     

//5.1 Crie uma função que receba dois números e retorne a média.
function média (a,b){
  return (a+b)/2 // coloca entre parentes se não o java vai fazer primeiro a divisão
}
let resultado= média(10,10);
console.log(resultado)

